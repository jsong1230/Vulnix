{
  "enableAllProjectMcpServers": true,
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "plansDirectory": "docs/plans",
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",

      "Bash(ls *)", "Bash(ls)",
      "Bash(cat *)", "Bash(head *)", "Bash(tail *)", "Bash(wc *)",
      "Bash(find *)", "Bash(which *)", "Bash(pwd)", "Bash(echo *)",
      "Bash(mkdir *)", "Bash(cp *)", "Bash(mv *)", "Bash(touch *)",

      "Bash(git log *)", "Bash(git log)",
      "Bash(git diff *)", "Bash(git diff)",
      "Bash(git status *)", "Bash(git status)",
      "Bash(git branch *)", "Bash(git branch)",
      "Bash(git show *)", "Bash(git stash *)", "Bash(git worktree *)",

      "Bash(npm test *)", "Bash(npm test)",
      "Bash(npm run test *)", "Bash(npm run test)",
      "Bash(npm run lint *)", "Bash(npm run lint)",
      "Bash(npm run format *)", "Bash(npm run format)",
      "Bash(npm run build *)", "Bash(npm run build)",
      "Bash(npm run dev *)", "Bash(npm run dev)",
      "Bash(npx tsc *)", "Bash(npx tsc)",
      "Bash(npx prisma *)",
      "Bash(npx eslint *)", "Bash(npx prettier *)",
      "Bash(npx vitest *)", "Bash(npx playwright *)",

      "Bash(docker compose *)",
      "Bash(docker build *)",
      "Bash(docker ps *)", "Bash(docker ps)",
      "Bash(docker logs *)",

      "Bash(node *)", "Bash(node)",
      "Bash(bash .claude/scripts/*)",

      "Bash(* --version)", "Bash(* --help)"
    ],
    "deny": [
      "Bash(sudo *)", "Bash(sudo)",
      "Edit(//etc/**)", "Edit(//usr/**)", "Edit(//var/**)", "Edit(//sys/**)", "Edit(//boot/**)",
      "Read(//etc/shadow)", "Read(//etc/passwd)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/scripts/tier3-guard.sh\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact|resume",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/scripts/session-context.sh\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/scripts/pre-compact.sh\""
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/scripts/task-quality-check.sh\""
          }
        ]
      }
    ]
  }
}
